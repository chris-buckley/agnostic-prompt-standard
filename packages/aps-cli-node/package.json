{
  "name": "@agnostic-prompt/aps",
  "version": "1.1.5",
  "description": "CLI to install and manage the Agnostic Prompt Standard (APS) skill and platform templates.",
  "type": "module",
  "bin": {
    "aps": "./bin/aps.js"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:test": "tsc -p tsconfig.test.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint src test",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "npm run build && npm run build:test && node --test ./dist-test/*.test.js ./dist-test/commands/*.test.js",
    "prepack": "npm run build && node ./scripts/prepack.js",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.0.0",
    "commander": "^12.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^18.19.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "files": [
    "bin/",
    "dist/",
    "payload/",
    "scripts/",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/chris-buckley/agnostic-prompt-standard.git"
  },
  "license": "MIT"
}
